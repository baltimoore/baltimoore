{
  "React generic component template": {
    "prefix": "!tsc",
    "body": [
      "import React from 'react';",
      "/*=====   Style imports   =====*/",
      "import styles from './style.module.scss';",
      "/*===== Component imports =====*/",
      "",
      "type ${1:${2:NameOfComponent}${3:$TM_FILENAME_BASE}}Props = {",
      "  ${4:prop}: ${5:type}",
      "  // ..",
      "}",
      "",
      "function $1(props: $1Props) {",
      "  return (",
      "    <div id={styles.$1}>{props.${4:prop}}</div>",
      "  );",
      "}",
      "",
      "export default $1;",
      ""
    ],
    "description": "React generic component template"
  },
  "React form template": {
    "prefix": "!tsf",
    "body": [
      "import React, { useState } from 'react';",
      "/*=====   Style imports   =====*/",
      "import styles from './style.module.scss';",
      "/*===== Component imports =====*/",
      "",
      "function ${1:${2:NameOfForm}${3:$TM_FILENAME_BASE}}() {",
      "  // Defining the use-state hook",
      "  const [${4:formDetails}, set${4:FormDetails}] = useState({",
      "    value: \"\",",
      "    // ..",
      "  });",
      "",
      "  const handleChange = (e: React.ChangeEvent<HTMLInputElement>) => {",
      "    set${4:FormDetails}({ ...${4:formDetails}, [e.target.name]: e.target.value });",
      "  }",
      "",
      "  const handleSubmit = (e: React.FormEvent<HTMLFormElement>) => {",
      "    e.preventDefault();",
      "    console.log(${4:formDetails});",
      "  }",
      "",
      "  return (",
      "    <div id={styles.$1}>",
      "      <form onSubmit={(e) => handleSubmit(e)} >",
      "",
      "      </form>",
      "    </div>",
      "  );",
      "}",
      "",
      "export default $1;",
      ""
    ],
    "description": "React form template"
  }
}
