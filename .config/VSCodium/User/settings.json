{ 
  "javascript.updateImportsOnFileMove.enabled": "always",
 
  /*
   * EXTENSION-SPECIFIC SETTINGS
   */
  // Live Sass Compiler extension settings
  "liveSassCompile.settings.generateMap": false,
  "liveSassCompile.settings.formats": [
    {
      // compress the css file
      "format": "compressed",
      // add .min.css as the extension
      "extensionName": ".min.css"
    }
  ],

  "godotTools.editorPath.godot4": "godot4",
  "godotTools.editorPath.godot3": "",
  "godot.csharp.executablePath": "godot4",
  "tailwind-fold.foldStyle": "QUOTES",
  "tailwind-fold.unfoldIfLineSelected": true,
  "tailwind-fold.foldLengthThreshold": 20,
  "php.codeActions.enabled": false,
  "hediet.vscode-drawio.resizeImages": null,
  "hediet.vscode-drawio.theme": "Kennedy",
  "diffEditor.ignoreTrimWhitespace": false,

  // Git settings
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.openRepositoryInParentFolders": "never",

  "database-client.autoSync": true,
  "editor.minimap.enabled": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.explorerKind": "external",
  "terminal.external.linuxExec": "konsole",
  "vsicons.dontShowNewVersionMessage": true,
  "window.menuBarVisibility": "toggle",
  "workbench.iconTheme": "vscode-icons",
}
